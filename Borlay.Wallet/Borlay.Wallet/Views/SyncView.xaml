<UserControl x:Class="Borlay.Wallet.Views.SyncView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Borlay.Wallet.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Border Background="#8aaa" BorderBrush="#ccc" BorderThickness="1" Padding="20">
        <Border Background="#fff" Padding="30" MinHeight="100" Width="500" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ContentControl Content="{Binding SyncView}"></ContentControl>
        </Border>
    </Border>
</UserControl>
